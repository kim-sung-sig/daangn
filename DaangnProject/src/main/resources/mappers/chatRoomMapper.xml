<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "./mybatis-3-mapper.dtd" >
<mapper namespace="kr.ezen.daangn.dao.DaangnChatRoomDAO">

	<select id="selectChatRoomByIdx" parameterType="int" resultType="ChatRoomVO">
		select * from chatroom where roomIdx = #{chatRoomIdx}
	</select>
	
	<select id="selectChatRoom" parameterType="ChatRoomVO" resultType="ChatRoomVO">
		select * from chatroom where (userIdx = #{userIdx} and boardIdx = #{boardIdx})
	</select>
	
	<insert id="createChatRoom" parameterType="ChatRoomVO">
		<selectKey keyColumn="roomIdx" keyProperty="roomIdx" resultType="int" order="BEFORE">
			select chatRoom_idx_seq.nextval from dual
		</selectKey>
		insert into chatRoom values (#{roomIdx, jdbcType=INTEGER}, #{userIdx}, #{boardIdx})
	</insert>
	
	<select id="selectChatRoomByUserIdx" parameterType="int" resultType="ChatRoomVO">
		select * from chatRoom where userIdx = #{userIdx}
	</select>
	
	<select id="selectCountByBoardIdx" parameterType="int" resultType="int">
		select count(*) from chatRoom where boardIdx = #{boardIdx}
	</select>
	
	<delete id="deleteChatRoom" parameterType="int">
		delete from chatRoom where roomIdx = #{roomIdx}
	</delete>
	
	<select id="findChatRoom" parameterType="ChatRoomVO" resultType="int">
		select
			count(*)
		from
			chatRoom
		where
			(userIdx = #{userIdx} and boardIdx = #{boardIdx})
	</select>
</mapper>